# Application Settings
APP_NAME="Azienda in Cloud ERP"
APP_VERSION="2.0.0"
ENVIRONMENT=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# MongoDB Atlas (REQUIRED)
MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/
DB_NAME=azienda_in_cloud
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10
MONGODB_TIMEOUT_MS=5000

# Security (REQUIRED)
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Settings
ALLOWED_ORIGINS=*
ALLOW_CREDENTIALS=true
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# File Upload
MAX_UPLOAD_SIZE_MB=50
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=.xml,.xlsx,.xls,.pdf,.csv

# Email Configuration (OPTIONAL)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com

# Gmail IMAP (OPTIONAL)
GMAIL_IMAP_ENABLED=false
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Document AI (OPTIONAL)
DOCUMENT_AI_ENABLED=false
DOCUMENT_AI_API_KEY=your-api-key

# Feature Flags
ENABLE_SMTP_EMAIL=false
ENABLE_GMAIL_IMAP=false
ENABLE_DOCUMENT_AI=false
ENABLE_ASYNC_IMPORTS=true
ENABLE_CACHING=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=logs/app.log

# Performance
REQUEST_TIMEOUT_SECONDS=300
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_IMPORTS=5

# Business Logic
DEFAULT_USER_ID=admin
DEFAULT_USER_EMAIL=ceraldigroupsrl@gmail.com

# Paths
STATIC_FILES_DIR=static
TEMPLATES_DIR=templates
FONTS_DIR=fonts
